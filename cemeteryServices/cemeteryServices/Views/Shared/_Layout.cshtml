<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Cemetery Services</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <style>
        .hero-section {
            position: relative;
            background: url('@Url.Content("~/websiteImages/CS -HomePageBackground.jpg")') no-repeat center center/cover;
            height: 100vh;
            width: 100%;
        }

        .hero-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
        }

        .hero-content {
            position: relative;
            color: white;
            text-align: center;
            top: 50%;
            transform: translateY(-50%);
        }
    </style>
</head>
<body>
    <!-- Header Section -->
    <header class="bg-white border-bottom py-3">
        <div class="container d-flex justify-content-between align-items-center">
            <h1 class="m-0 fw-bold"><a asp-controller="Home" asp-action="Index" class="text-dark text-decoration-none">CEMETERY SERVICES</a></h1>
            <nav class="d-flex align-items-center">
                <a href="@Url.Action("Index", "Home")" class="nav-link text-dark">Home</a>
                <a href="@Url.Action("About", "Home")" class="nav-link text-dark">About</a>
                <a href="@Url.Action("Services", "Home")" class="nav-link text-dark">Services</a>
                <a href="@Url.Action("Contact", "Home")" class="btn btn-outline-dark ms-3">Contact</a>
                <a href="@Url.Action("AdminHome", "Admin")" class="btn btn-outline-dark ms-3">Admin</a>
            </nav>
        </div>
    </header>

    <div class="container-fluid p-0">
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
</body>
</html>

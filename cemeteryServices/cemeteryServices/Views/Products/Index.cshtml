@model IEnumerable<cemeteryServices.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h1 class="text-center my-5">Products</h1>

<div class="container">
    <div class="text-end mb-4">
        <a asp-action="Create" class="btn btn-success">Create New</a>
    </div>

    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" />
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@item.Name</h5>
                        <p class="card-text">@item.Description</p>
                        <p class="card-text"><strong>Price:</strong> @item.Price.ToString("C")</p>
                        <div class="d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm">Edit</a>
                            <form asp-action="Delete" method="post" style="display:inline;">
                                <input type="hidden" name="Id" value="@item.Id" />
                                <input type="submit" value="Delete" class="btn btn-danger btn-sm" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


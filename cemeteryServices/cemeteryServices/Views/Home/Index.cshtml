@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<div class="hero-section">
    <div class="hero-overlay"></div>
    <div class="hero-content container text-center">
        <h1 class="display-4 fw-bold">Honoring memories</h1>
        <p class="lead text-white-50">Thoughtful decorations for loved ones</p>
        <a href="#packages-section" class="btn btn-success btn-lg" id="view-services-btn">View Services</a>
    </div>
</div>

<!-- Packages Section -->
<section id="packages-section" class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h6 class="text-uppercase text-success fw-bold">Thoughtful Remembrances</h6>
            <h2 class="fw-bold">Beautiful flowers and decorations for loved ones</h2>
        </div>
        <div class="row g-4">
            <!-- First Card -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <a class="nav-link" href="/Packages/Index">
                        <img src="path/to/flower-packages.jpg" class="card-img-top" alt="Flower Packages">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">Flower packages <span>&gt;</span></h5>
                            <p class="card-text">Beautiful flower arrangements tailored for your loved ones.</p>
                        </div>
                    </a>
                </div>
            </div>
            <!-- Second Card -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <img src="path/to/gravesite-decoration.jpg" class="card-img-top" alt="Gravesite Decoration">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Gravesite decoration <span>&gt;</span></h5>
                        <p class="card-text">Personalized decorations for a meaningful tribute.</p>
                    </div>
                </div>
            </div>
            <!-- Third Card -->
            <div class="col-md-4">
                <div class="card shadow-sm h-100">
                    <img src="path/to/scheduled-delivery.jpg" class="card-img-top" alt="Scheduled Delivery">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Scheduled delivery <span>&gt;</span></h5>
                        <p class="card-text">Timely and respectful delivery of floral tributes.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
